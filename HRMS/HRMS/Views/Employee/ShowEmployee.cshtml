@{
    Layout = "_Layout";
}
@model List<EmployeeDetails>
<body>
    <main id="main" class="main">
        <div class="container mt-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-md-12 ">
                    <form id="regForm" class="gradient-custom">
                        <h1 id="register" style="font-size: 300%; text-shadow: 2px 2px 8px #FF0000;"><b>All Employee</b></h1>
                        <section class="section dashboard">

                            <div class="row">

                                <!-- Left side columns -->
                                <div class="col-lg-12">
                                    <div class="row">
                                        <!-- Recent ADDED -->
                                        <div class="col-12 p-3">
                                            <div class="card recent-sales overflow-auto">
                                                <div class="card-body">
                                                    

                                                    <table class="table table-borderless datatable">
                                                        <thead>
                                                            <tr>
                                                                <th scope="col">Employee Id</th>
                                                                <th scope="col">Employee Name</th>
                                                                <th scope="col">Email Id</th>
                                                                <th scope="col">Employee Type</th>
                                                                <th scope="col">Mobilenumber</th>
                                                                <th scope="col">Gender</th>
                                                                <th scope="col">ADD</th>
                                                                <th scope="col">UPDATE</th>
                                                                <th scope="col">DELETE</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var i in Model)
                                                             {
                                                                <tr>
                                                                    <td scope="row">@i.EmpId</td>
                                                                    <td scope="row">@i.EmpFullName</td>
                                                                    <td scope="row">@i.EmpEmail</td>
                                                                    <td scope="row">@i.Emptype</td>
                                                                    <td scope="row">@i.EmpMobilenumber</td>
                                                                    <td scope="row">@i.EmpGender</td>
                                                                
                                                                    <td>@Html.ActionLink("ADD","AddEmployee","Employee")</td>
                                                                    <td>@Html.ActionLink("UPDATE", "UpdateEmployee","Employee", new {id = @i.EmpId} )</td>
                                                                    <td>
                                                                        @Html.ActionLink("DELETE", "DeleteEmployee","Employee",new {id = @i.EmpId},
                                                                        new { onclick = "return confirm('Are sure wants to delete?');" })
                                                                    </td>
    
                                                                 </tr>
                                                             }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- End Left side columns -->
                                </div>
                            </div>
                        </section>
                    </form>
                </div>
            </div>
        </div>
    </main>
</body>
